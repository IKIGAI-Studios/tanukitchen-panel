<%- include('templates/header')%>
<div class="d-flex justify-content-center">
  <div class="container mt-3 form-signin text-center">

    <form action="login" method="post">

      <div class="container my-5">
        <h1 class="tk-ani-grad">Welcome back!</h1>
        <span class="tk-text">Please enter your credentials</span>
      </div>
  
      <div class="container" style="width: 20%">
          <label class="form-label tk-form-label" for="user">Username</label>
          <input type="text" name="username" id="username" class="form-control tk-form-input"/>
      </div>
      
      <div class="container" style="width: 20%">
        <label class="form-label tk-form-label" for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control tk-form-input"/>
      </div>

      <div class="container" style="width: 20%">
        <input type="checkbox" name="cookie" id="cookie" class="form-check-input tk-form-chkbx"/>
        <label class="form-label tk-form-label" for="cookie">Remember me</label>
      </div>

      <div>
        <div class="container mt-3">
          <button type="submit" class="btn tk-form-btn">Log in</button>
        </div>
      </div>

    </form>
    <div class="container mt-5">
        <span class="tk-text">Or</span>
        <a href="/gAuth" class="tk-link">Log in with Google</a> 
        <br><br><br>
        <span class="tk-text"> Don't have an account? </span>
        <a href="/register" class="tk-link">Sign Up</a>
    </div>
  </div>
</div>
<%- include('templates/footer')%>
